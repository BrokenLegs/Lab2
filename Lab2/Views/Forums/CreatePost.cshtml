@using Lab2.ViewModels
@model Lab2.Models.Entities.Post
           

@{
    ViewBag.Title = "CreatePost";
}



<h2>CreatePost</h2>

@{ Html.EnableClientValidation(true); }
@using (Html.BeginForm()) { 
<div>
    <p>
        <span>@Html.LabelFor(p => p.Title)</span>
        @Html.EditorFor(p => p.Title) 
        <span>@Html.ValidationMessageFor(p => p.Title)</span>
    </p>
    <p>
        <span>@Html.LabelFor(p => p.Body)</span>
        @Html.EditorFor(p => p.Body) 
        <span>@Html.ValidationMessageFor(p => p.Body)</span>
    </p>

</div>
<div>
    <input type="submit" value="Create" />
</div>
}
    